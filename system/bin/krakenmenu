#!/system/bin/sh

x="krakenmenu"
menu ()
{
while true $x != "krakenmenu"
do
clear
echo "================================================"
echo "Kraken Menu"
echo "Criado por : Haxis"
echo ""
echo "1)Limpar cache"
echo""
echo "2)Otimizar Sistema"
echo ""
echo "3)Sair do menu"
echo ""
echo "================================================"

echo "Digite a opção desejada:"
read x
echo "Opção informada ($x)"
echo "================================================"

case "$x" in


    1)
      echo "Limpando..."
      rm /data/cache/*
      rm /data/local/*.apk
      rm /cache/*
      rm /data/log/*.log
      rm /data/local/tmp/*.apk
      rm /cache/recovery/*
      rm /data/*.log
      rm /data/backup/pending/*.tmp
      rm /data/tombstones/*
      rm /sdcard/LOST.DIR/*
      sleep 5
echo "================================================"
;;
    2)
      echo "Otimizando..."
      echo "3" > /proc/sys/vm/drop_caches
      sleep 5
echo "================================================"
;;
   3)
      echo "Saindo..."
      sleep 5
      clear;
      exit;
echo "================================================"
;;

*)
        echo "Opção inválida!"
esac
done

}
menu
